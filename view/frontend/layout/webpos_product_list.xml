<?xml version="1.0"?>

<page layout='webpos' xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" >
    <body>
        <referenceBlock name="webpos.page">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="webpos.container" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="checkout" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="product.list" xsi:type="array">
                                            <item name="component" xsi:type="string">Bkademy_Webpos/js/view/catalog/product-list</item>
                                            <item name="displayArea" xsi:type="string">product.list</item>
                                        </item>
                                    </item>
                                </item>
                                <item name="webpos_catalog_product_detail_popup" xsi:type="array">
                                    <item name="component" xsi:type="string">Bkademy_Webpos/js/view/catalog/product/detail-popup</item>
                                    <item name="displayArea" xsi:type="string">webpos_catalog_product_detail_popup</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>